{
	"manifest_version": 2,
	"author": "佐藤",
	"homepage_url": "http://example.com",
	"name": "バリデーションチェッカー",
	"description": "表示中のページのhtmlのバリデーションチェック",
	"version": "0.1",
	"icons": {
		"32": "icon_32.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["script.js","jquery.min.js"]
	}],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon_32.png",
		"default_title": "バリデーションチェッカー"
	},
	"permissions": [
		"tabs",
		"background",
		"http://*/*",
		"https://*/*"
	]
}